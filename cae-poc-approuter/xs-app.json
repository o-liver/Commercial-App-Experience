{
    "welcomeFile":"index.html",
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^/eventmanager/(.*)$",           
            "destination": "srv",
            "authenticationType": "xsuaa"
        },
        {
            "source": "^/eventmanagement/(.*)$",  
            "target": "/eventmanagement/$1",         
            "destination": "srv",
            "authenticationType": "xsuaa",
            "csrfProtection": false
        }
    ]
}