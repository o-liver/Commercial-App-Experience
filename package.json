{
  "name": "cae-poc",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^12.0.0",
    "npm": "^6.0.0"
  },
  "dependencies": {
    "@sap/approuter": "^10.4.3",
    "@sap/cds": "^5",
    "@sap/hana-client": "^2.6.61",
    "@sap/node-jwt": "^1.6.15",
    "@sap/xsenv": "^3.1.0",
    "@sap/xssec": "^2.2.5",
    "express": "^4",
    "passport": "^0.4.1",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.90.0",
    "jest": "^27.0.1",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql",
        "[development]": {
          "model": "db/sqlite"
        },
        "[production]": {
          "model": "db/hana"
        }
      },
      "uaa": {
        "kind": "xsuaa"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "odata": {
    "version": "v4"
  },
  "sapux": [
    "app/events",
    "app/eventmanagement"
  ]
}
