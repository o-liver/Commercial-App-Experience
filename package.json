{
  "name": "cae-poc",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^14.0.0",
    "npm": "^7.0.0"
  },
  "dependencies": {
    "@sap/cds": "5.3.0",
    "@sap/hana-client": "^2.7.23",
    "@sap/xsenv": "^3.1.0",
    "@sap/xssec": "^3.2.0",
    "express": "^4",
    "passport": "^0.4.1",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.90.5",
    "jest": "^27.0.1",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "test": "jest",
    "deploy": "cds deploy --to sqlite:my.db --no-save",
    "deploy:hana": "npx cross-env NODE_ENV=devhana cds deploy --to hana --auto-undeploy",
    "start:hana": "npx cross-env NODE_ENV=devhana cds run",
    "watch": "cds watch",
    "watch:hana": "npx cross-env NODE_ENV=devhana cds watch",
    "watch:test": "npm-watch test",
    "build": "npx cds build",
    "mta:build": "mbt build -m=verbose -j=8",
    "mta:deploy": "cf deploy mta_archives/sme.nscm.poc_1.0.0.mtar -f --version-rule ALL -e mtaextension.yaml",
    "mta:deploy:srv": "npm run mta:deploy -- --all-resources -m cae-poc-srv",
    "mta:deploy:ui": "npm run mta:deploy -- --all-resources -m cae-poc-app-content",
    "mta:deploy:flp": "npm run mta:deploy -- --all-resources -m cae-poc-flpdeployer"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql",
        "[development]": {
          "model": "db/sqlite"
        },
        "[production]": {
          "model": "db/hana"
        }
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "odata": {
    "version": "v4"
  },
  "sapux": [
    "app/events",
    "app/eventmanagement",
    "app/app",
    "app/eventmanagement",
    "app/eventmanagement",
    "app/project1"
  ]
}
